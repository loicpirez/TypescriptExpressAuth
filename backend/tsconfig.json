{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "interfaces/*": ["src/interfaces/*"],
      "types/*": ["src/types/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}